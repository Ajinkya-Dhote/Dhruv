<mvc:View
	controllerName="sap.ui.core.sample.odata.v4.MusicArtists.ObjectPage"
	height="100%"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="objectpage" navButtonPress="onBack" showHeader="true" showNavButton="true">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:Form editable="true" id="objectPageForm">
					<f:title>
						<core:Title text="Artist Details" />
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout
							adjustLabelSpan="false"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							singleContainerFullSize="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Name">
									<f:fields>
										<Input id="name" editable="{ui-op>/bEditMode}"
											value="{Name}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Country of Origin">
									<f:fields>
										<Input id="country" editable="{ui-op>/bEditMode}"
											value="{CountryOfOrigin}" />
										<Input id="country_text" editable="false"
											value="{CountryOfOrigin_Text}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Region of Origin">
									<f:fields>
										<Input id="region" editable="{ui-op>/bEditMode}"
											value="{RegionOfOrigin}" />
										<Input id="region_text" editable="false"
											value="{RegionOfOrigin_Text}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Founding Year">
									<f:fields>
										<Input id="founding" editable="{ui-op>/bEditMode}"
											value="{FoundingYear}" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Breakup Year">
									<f:fields>
										<Input id="breakup" editable="{ui-op>/bEditMode}"
											value="{BreakupYear}" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<List class="sapUiResponsiveMargin" growing="true" growingThreshold="10"
					id="publicationList"
					items="{
						parameters : {$$ownRequest : true},
						path : '_Publication',
						sorter : {path : 'ReleaseDate'}
					}"
					width="auto">
					<headerToolbar>
						<Toolbar>
						<Title text="Publications"/>
							<ToolbarSpacer/>
							<Button id="create" enabled="{ui-op>/bEditMode}" press="onCreate"
								text="Create" />
							<ToolbarSeparator/>
							<!-- refresh on ODLB relative to v4.Context is not possible -->
							<Button id="refresh" enabled="false" press="onRefresh" text="Refresh" />
						</Toolbar>
					</headerToolbar>
					<items>
						<ObjectListItem number="{ReleaseDate}" press="onSelect" title="{Name}"
							type="Active">
							<firstStatus>
								<ObjectStatus state="None"
									text="{Price}" />
							</firstStatus>
							<attributes>
								<ObjectAttribute text="{CurrencyCode}" />
							</attributes>
						</ObjectListItem>
					</items>
				</List>
			</VBox>
		</content>
		<footer>
			<Bar>
				<contentLeft>
					<DraftIndicator id="draftIndicator"/>
				</contentLeft>
				<contentRight>
					<Button enabled="{= !${ui-op>/bEditMode}}" id="edit" press="onEdit"
						text="Edit" />
					<Button enabled="{ui-op>/bEditMode}" id="discard" press="onDiscard"
						text="Discard" />
					<Button enabled="{ui-op>/bEditMode}" id="save" press="onSave" text="Save" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>