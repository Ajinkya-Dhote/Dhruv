<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" 
    xmlns="sap.m" controllerName="els.org.pratideen.controller.ProductDisp" displayBlock="true" class="sapUiSizeCompact">
    <Page title="{i18n>labelProduct}" navButtonPress="navBack" showNavButton="true">
        <content>
            <Panel headerText="{i18n>lblProdList}">
            <content>
                <Table>
                    <columns>

                        <Column>
                            <header>
                                <Text text="{i18n>labelProductID}" />
                            </header>
                        </Column>

                        <Column>
                            <header>
                                <Text text="{i18n>labelProductName}" />
                            </header>
                        </Column>

                        <Column>
                            <header>
                                <Text text="{i18n>labelProductPrice}" />
                            </header>
                        </Column>

                        <Column>
                            <header>
                                <Text text="{i18n>labelProductType}" />
                            </header>
                        </Column>


                        <Column>
                            <header>
                                <Text text="{i18n>labelProductQty}" />
                            </header>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text/>
                                <Text/>
                                <Text/>
                                <Text/>
                                <Text/>
                            </cells>
                        </ColumnListItem>
                    </items>

                </Table>
                </content>
            </Panel>
        </content>
        <footer>
           <Toolbar>
             <ToolbarSpacer/>
                <Button text="{i18n>labelCreatProd}" press="onCreatePress" type="Emphasized" />
            </Toolbar>
        </footer>

    </Page>

</mvc:View>